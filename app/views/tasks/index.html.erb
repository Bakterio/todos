<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <table class="table">
  <tr class="table-primary">
    <th>Name</th>
    <th>Deathline</th>
    <th>Done</th>
    <th></th>
  </tr>
  <% current_user.tasks.each do |task| %>
    <tr>
      <td><%= link_to task.name, task %></td>
      <td><%= task.deathline %></td>
      <td><%= task.done %></td>
      <% if task.done %>
        <td><%= button_to "Undone", task_path(task, task: { done: false }), method: :put, class: "btn btn-secondary" %>
      <% else %>
        <td><%= button_to "Done", task_path(task, task: { done: true }), method: :put, class: "btn btn-secondary" %>
      <% end %>
    </tr>
  <% end %>
  </table>
</div>

<%= link_to "New task", new_task_path %>
